<%= render(Layout::AppComponent.new) do %>
  <div>
    <% @blogs.each do |blog| %>
      <section class="flex border rounded-xl max-w-screen-lg mx-auto">
        <%= image_tag blog.featured_image.variant(:small_square), class: 'rounded-tl-xl rounded-bl-xl' %>
        <div class="p-8">
          <h3 class="text-xl font-bold">
            <%= link_to home_show_path(blog) do %>
              <%= blog.title %>
            <% end %>
          </h3>
          <div class="prose">
            <%= blog.description %>
          </div>
        </div>
      </section>
    <% end %>
  </div>
<% end %>
