<%= render(FormCardComponent.new) do %>
  <h2 class="text-2xl">Sign up</h2>

  <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: {class: 'space-y-4'}) do |f| %>
    <%= render "devise/shared/error_messages", resource: resource %>

    <div class="field">
      <%= f.label :email %><br />
      <%= f.email_field :email, autofocus: true, autocomplete: "email", class: 'w-full' %>
    </div>

    <div class="field">
      <%= f.label :password %>
      <% if @minimum_password_length %>
        <em>(<%= @minimum_password_length %> characters minimum)</em>
      <% end %><br />
      <%= f.password_field :password, autocomplete: "new-password", class: 'w-full' %>
    </div>

    <div class="field">
      <%= f.label :password_confirmation %><br />
      <%= f.password_field :password_confirmation, autocomplete: "new-password", class: 'w-full' %>
    </div>

    <div class="actions">
      <%= f.submit "Sign up", class: 'bg-gray-800 text-white py-2 px-4' %>
    </div>
  <% end %>

  <%= render "devise/shared/links" %>
<% end %>
